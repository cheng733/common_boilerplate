# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Java文件特定配置
[*.java]
indent_size = 4
max_line_length = 120

# XML文件特定配置
[*.{xml,html,xhtml}]
indent_size = 2

# 属性文件配置
[*.properties]
indent_size = 2